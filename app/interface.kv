<Alpha>:
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'
        ScreenManager:
            id: manager

            Screen:
                name: 'landing'
                FloatLayout:
                    canvas.before:
                        Color:
                            rgb: (0.129411765, 0.121568627,0.125490196) 
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        font_name: 'SkarpaLt.ttf'
                        pos_hint: {'x': 0, 'y': 0.4}
                        text: "Alpha"
                        font_size: '85dp'

                    Label:
                        pos_hint: {'x': 0, 'y': 0.3}
                        text: 'Optimality for the rest of us.'
                        font_size: '15dp'

                    Label:
                        pos_hint: {'x': 0, 'y': -0.4}
                        text: root.Patient_message
                        font_size: '15dp'

                    Image:
                        source: 'img/brain.png'
                        pos_hint: {'x': 0.3, 'y': 0.3}
                        size_hint: (0.4, 0.4)
                        allow_stretch: True

                    Button:
                        background_color: (0.364705882,0.637254902,0.823529412,1)
                        background_normal: ''
                        size_hint: (1, 0.05)
                        pos_hint: {'x': 0, 'y': 0}
                        text: 'Login'
                        on_press:root.waiter()
                        on_press: root.authenticate()
                        on_release: manager.current = 'question'
                        on_release: root.getInfo("me",root.AUTH_KEY)

            Screen:
                name: 'question'
                FloatLayout:
                    canvas.before:
                        Color:
                            rgb: (0.129411765, 0.121568627,0.125490196) 
                        Rectangle:
                            pos: self.pos
                            size: self.size

                    Label:
                        font_name: 'SkarpaLt.ttf'
                        pos_hint: {'x': 0, 'y': 0.4}
                        text: 'Welcome, {0}!'.format(root.ME)
                        font_size: '55dp'

                    Label:
                        pos_hint: {'x': 0, 'y': 0.3}
                        text: "We've calculated some personality statistics from your Facebook use."
                        font_size: '15dp'

                    Label:
                        pos_hint: {'x': -.35, 'y': 0.15}
                        text: "{0}%".format(root.SLEEP_REGULARITY * 100)
                        font_size: '25dp'

                    Label:
                        pos_hint: {'x': -.35, 'y': 0.2}
                        text: "Sleep Schedule \n Consistency"
                        font_size: '15dp'

                    Button:
                        size_hint: (1, 0.05)
                        pos_hint: {'x': 0, 'y': 0}
                        text: 'Continue >>'
